@model IEnumerable<Person>
@{
    ViewData["Title"] = "Index";
}
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h1 class="text-primary">List of People</h1>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Person" asp-action="CreatePerson" class="btn btn-primary">Create Person</a>
        </div>
    </div>

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Status</th>
                    <th>Address</th>
                    <th>Birth Place</th>
                    <th>Date Of Birth</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var person in Model)
                {
                    <tr>
                        <td width="15%">@person.FName</td>
                        <td width="15%">@person.LName</td>
                        <td width="10%">@person.Status</td>
                        <td width="20%">@person.Address</td>
                        <td width="15%">@person.BirthPlace</td>
                        <td width="20%">@person.DateOfBirth</td>
                        @* Edit and Delete Buttons *@
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Person" asp-route-Id="@person.Id" asp-action="EditPerson" class="btn btn-primary mx-2">Edit</a>
                                <a asp-controller="Person" asp-route-Id="@person.Id" asp-action="DeletePerson" class="btn btn-danger mx-2">Delete</a>

                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Person exists</p>
    }
</div>
 